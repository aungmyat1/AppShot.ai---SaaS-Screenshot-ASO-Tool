# ========================================
# AppShot.ai - Environment Variables
# ========================================

# ========================================
# Database Configuration
# ========================================
# PostgreSQL connection string for Prisma (used by web app)
DATABASE_URL="postgresql://username:password@localhost:5432/getappshots?schema=public"

# PostgreSQL connection string for asyncpg (used by API app)
DATABASE_URL_ASYNC="postgresql+asyncpg://username:password@localhost:5432/getappshots"

# ========================================
# Authentication (Clerk)
# ========================================
# Clerk API keys (get from https://dashboard.clerk.com/)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_XXXXXXXXXXXXXXXXXXXXXXXX"
CLERK_SECRET_KEY="sk_test_XXXXXXXXXXXXXXXXXXXXXXXX"

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"

# Admin emails (comma-separated)
ADMIN_EMAILS="admin@example.com,user@example.com"

# ========================================
# Payment Processing (Stripe)
# ========================================
# Stripe API keys (get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxx"

# Stripe product and price IDs (get from https://dashboard.stripe.com/test/products)
NEXT_PUBLIC_STRIPE_PRICE_PRO="price_xxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_STRIPE_PRICE_STARTER="price_xxxxxxxxxxxxxxxxxxxxxxxx"

STRIPE_PRICE_PRO="price_xxxxxxxxxxxxxxxxxxxxxxxx"
STRIPE_PRICE_STARTER="price_xxxxxxxxxxxxxxxxxxxxxxxx"

# ========================================
# Storage Configuration (Choose one option)
# ========================================

# Option 1: Cloudflare R2 (recommended)
R2_ACCOUNT_ID="account-id-from-cloudflare"
R2_BUCKET_NAME="your-bucket-name"
R2_ACCESS_KEY_ID="your-access-key-id"
R2_SECRET_ACCESS_KEY="your-secret-access-key"

# Storage aliases used by the application
STORAGE_ENDPOINT_URL="https://account-id.r2.cloudflarestorage.com"
STORAGE_BUCKET="your-bucket-name"
STORAGE_REGION="auto"
STORAGE_ACCESS_KEY_ID="your-access-key-id"
STORAGE_SECRET_ACCESS_KEY="your-secret-access-key"

# Optional: Public URL for accessing stored assets (use r2.dev URL or custom domain)
STORAGE_PUBLIC_BASE_URL="https://pub-XXXXXX.r2.dev"

# Option 2: AWS S3 (alternative)
# STORAGE_ENDPOINT_URL="https://s3.region.amazonaws.com"
# STORAGE_BUCKET="your-s3-bucket"
# STORAGE_REGION="us-east-1"
# STORAGE_ACCESS_KEY_ID="your-aws-access-key"
# STORAGE_SECRET_ACCESS_KEY="your-aws-secret-key"

# ========================================
# Redis Configuration (Optional)
# ========================================
# Redis URL for caching and queue (if using BullMQ worker)
REDIS_URL="redis://localhost:6379/0"

# ========================================
# Queue and Processing Configuration (Optional)
# ========================================
# Queue mode (set to sync for Vercel/serverless, bullmq for dedicated workers)
SCRAPE_QUEUE_MODE="bullmq"  # or "sync"

# Playwright scraping mode
PLAY_SCRAPE_MODE="playwright"  # or "html"
PLAY_SCRAPE_FALLBACK_PLAYWRIGHT="true"  # or "false" for Vercel

# ========================================
# API Security
# ========================================
# JWT Secret Key (change from default!)
JWT_SECRET_KEY="change-me-to-a-secure-random-string-at-least-32-characters-long-for-production"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,https://yourdomain.com"

# ========================================
# Other Configuration
# ========================================
# Application mode
NODE_ENV="development"  # or "production"

# Port configuration
PORT=3000

# ========================================
# API Service Environment Variables
# ========================================
# If running the API service separately
# JWT_SECRET_KEY_API="change-me-to-a-secure-random-string-at-least-32-characters-long-for-production"
# REDIS_URL_API="redis://localhost:6379/0"
# CELERY_BROKER_URL="redis://localhost:6379/0"
# CELERY_RESULT_BACKEND="redis://localhost:6379/0"