# ========================================
# AppShot.ai - Environment Variables
# ========================================

### App
APP_URL="http://localhost:3000"

# ========================================
# Database Configuration
# ========================================
# PostgreSQL connection string for Prisma (used by web app)
DATABASE_URL="postgresql://username:password@ep-example-connection-pooler.c-1.us-east-1.aws.neon.tech/dbname?sslmode=require&channel_binding=require"

# ========================================
# Authentication (Clerk)
# ========================================
# Clerk API keys (get from https://dashboard.clerk.com/)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_YOUR_PUBLISHABLE_KEY_HERE"
CLERK_SECRET_KEY="sk_test_YOUR_SECRET_KEY_HERE"

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"

# Admin emails (comma-separated)
ADMIN_EMAILS="admin@example.com"

# ========================================
# Storage Configuration
# ========================================
# R2 Account ID from Cloudflare Dashboard
R2_ACCOUNT_ID="account-id-from-cloudflare"
# R2 Bucket Name
R2_BUCKET_NAME="your-bucket-name"
# R2 Access Key ID
R2_ACCESS_KEY_ID="your-access-key-id"
# R2 Secret Access Key
R2_SECRET_ACCESS_KEY="your-secret-access-key"
# S3-compatible API endpoint (R2):
STORAGE_ENDPOINT="https://<R2_ACCOUNT_ID>.r2.cloudflarestorage.com"
# Optional public base URL (if your bucket is public or you have a public domain):
R2_PUBLIC_URL="https://account-id.r2.cloudflarestorage.com/bucket-name"

# Storage aliases used by the application
STORAGE_BUCKET="your-bucket-name"
STORAGE_REGION="auto"
STORAGE_ACCESS_KEY_ID="your-access-key-id"
STORAGE_SECRET_ACCESS_KEY="your-secret-access-key"
STORAGE_PUBLIC_URL="https://account-id.r2.cloudflarestorage.com/bucket-name"

# ========================================
# Payment Processing (Stripe)
# ========================================
# Stripe API keys (get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY="sk_test_YOUR_STRIPE_SECRET_KEY_HERE"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET_HERE"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_PUBLISHABLE_KEY_HERE"

# Stripe product and price IDs (get from https://dashboard.stripe.com/test/products)
NEXT_PUBLIC_STRIPE_PRICE_PRO="price_starter_plan_id"
NEXT_PUBLIC_STRIPE_PRICE_STARTER="price_pro_plan_id"

# ========================================
# Redis Configuration (Optional)
# ========================================
# Redis URL for caching and queue (if using BullMQ worker)
REDIS_URL="redis://localhost:6379/0"

# ========================================
# Queue and Processing Configuration (Optional)
# ========================================
# Queue mode (set to sync for Vercel/serverless, bullmq for dedicated workers)
SCRAPE_QUEUE_MODE="bullmq"  # or "sync"

# Playwright scraping mode
PLAY_SCRAPE_MODE="playwright"  # or "html"
PLAY_SCRAPE_FALLBACK_PLAYWRIGHT="true"  # or "false" for Vercel

# ========================================
# API Security
# ========================================
# JWT Secret Key (change from default!)
JWT_SECRET_KEY="change-me-to-a-secure-random-string-at-least-32-characters-long-for-production"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,https://yourdomain.com"

# ========================================
# Other Configuration
# ========================================
# Application mode
NODE_ENV="development"  # or "production"

# Port configuration
PORT=3000

# ========================================
# API Service Environment Variables
# ========================================