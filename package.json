{
  "name": "getappshots-monorepo",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:doppler": "doppler run -- turbo dev",
    "build": "turbo build",
    "build:doppler": "doppler run -- turbo build",
    "lint": "turbo lint",
    "web:dev": "npm --workspace apps/web run dev",
    "web:build": "npm --workspace apps/web run build",
    "web:start": "npm --workspace apps/web run start",
    "web:lint": "npm --workspace apps/web run lint",
    "web:worker": "npm --workspace apps/web run worker",
    "api:dev": "cd apps/api && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "setup": "node scripts/setup-env.js",
    "setup:env": "node scripts/setup-env.js",
    "stripe:sync": "tsx scripts/sync-stripe-pricing.ts",
    "doppler:setup": "node scripts/doppler-setup.js",
    "doppler:init": "node scripts/doppler-setup.js",
    "stripe:check": "tsx scripts/check-stripe-setup.ts",
    "env:sync": "node scripts/sync-doppler-to-vercel.js",
    "env:sync:dev": "node scripts/sync-doppler-to-vercel.js --env=development",
    "env:sync:preview": "node scripts/sync-doppler-to-vercel.js --env=preview",
    "env:sync:prod": "node scripts/sync-doppler-to-vercel.js --env=production",
    "env:dry-run": "node scripts/sync-doppler-to-vercel.js --dry-run",
    "env:check": "node scripts/verify-env.js",
    "env:list": "doppler secrets --plain",
    "check:deployment": "node scripts/check-deployment-readiness.js",
    "predeployment": "node scripts/check-deployment-readiness.js",
    "setup:services": "node scripts/setup-external-services.js",
    "setup:database": "node scripts/setup-database.js",
    "update:database": "node scripts/update-vercel-database.js",
    "deploy:vercel": "node scripts/deploy-to-vercel.js",
    "deploy:production": "node scripts/deploy-vercel-production.js"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "turbo": "^2.3.7"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
