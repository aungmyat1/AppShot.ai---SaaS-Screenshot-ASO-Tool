{
  "name": "getappshots-monorepo",
  "private": true,
  "packageManager": "npm@11.8.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:doppler": "doppler run -- turbo dev",
    "build": "turbo build",
    "build:doppler": "doppler run -- turbo build",
    "clean": "node -e \"const fs=require('fs'); const p='apps/web/.next'; if(fs.existsSync(p)) fs.rmSync(p, { recursive: true }); console.log('Cleaned .next');\"",
    "lint": "turbo lint",
    "test": "npm --workspace apps/web run test && node -e \"require('child_process').execSync('python -m pytest', {cwd: 'apps/api', stdio: 'inherit'})\"",
    "web:dev": "npm --workspace apps/web run dev",
    "web:build": "npm --workspace apps/web run build",
    "web:clean": "npm --workspace apps/web run clean",
    "web:start": "npm --workspace apps/web run start",
    "web:lint": "npm --workspace apps/web run lint",
    "web:worker": "npm --workspace apps/web run worker",
    "api:dev": "cd apps/api && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "setup": "node scripts/setup-env.js",
    "setup:env": "node scripts/setup-env.js",
    "stripe:sync": "tsx scripts/sync-stripe-pricing.ts",
    "doppler:setup": "node scripts/doppler-setup.js",
    "doppler:init": "node scripts/doppler-setup.js",
    "stripe:check": "tsx scripts/check-stripe-setup.ts",
    "env:sync": "node scripts/sync-doppler-to-vercel.js",
    "env:sync:all": "node scripts/sync-doppler-to-vercel.js --env=development && node scripts/sync-doppler-to-vercel.js --env=preview && node scripts/sync-doppler-to-vercel.js --env=production",
    "env:sync:dev": "node scripts/sync-doppler-to-vercel.js --env=development",
    "env:sync:preview": "node scripts/sync-doppler-to-vercel.js --env=preview",
    "env:sync:prod": "node scripts/sync-doppler-to-vercel.js --env=production",
    "env:sync:staging": "node scripts/sync-doppler-to-vercel.js --env=preview",
    "env:sync:test": "node scripts/sync-doppler-to-vercel.js --dry-run && node scripts/sync-doppler-to-vercel.js --env=development --dry-run && node scripts/sync-doppler-to-vercel.js --env=preview --dry-run && node scripts/sync-doppler-to-vercel.js --env=production --dry-run",
    "env:dry-run": "node scripts/sync-doppler-to-vercel.js --dry-run",
    "env:check": "node scripts/verify-env.js",
    "env:check:clerk": "node scripts/verify-clerk-env.js",
    "env:check:doppler": "node scripts/verify-doppler-vercel-integration.js",
    "env:check:clerk-key": "node scripts/check-clerk-key.js",
    "env:list": "doppler secrets --plain",
    "check:deployment": "node scripts/check-deployment-readiness.js",
    "predeployment": "node scripts/check-deployment-readiness.js",
    "setup:services": "node scripts/setup-external-services.js",
    "setup:database": "node scripts/setup-database.js",
    "update:database": "node scripts/update-vercel-database.js",
    "deploy:vercel": "node scripts/deploy-to-vercel.js",
    "deploy:production": "node scripts/deploy-vercel-production.js",
    "deploy:hook:preview": "node scripts/deploy-hook.js preview",
    "deploy:hook:prod": "node scripts/deploy-hook.js production",
    "deploy:monitor": "node scripts/monitor-vercel-deployment.js --watch",
    "deploy:check": "node scripts/monitor-vercel-deployment.js",
    "clerk:check": "node scripts/check-clerk-vercel.js",
    "doppler:verify": "node scripts/verify-doppler-sync.js",
    "doppler:guide": "node scripts/setup-doppler-guide.js",
    "lockfile:check": "node scripts/fix-lockfile.js",
    "lockfile:fix": "npm install && node scripts/fix-lockfile.js",
    "lockfile:verify": "node scripts/verify-lockfile.js",
    "branch:check": "node scripts/branch-setup.js --check",
    "branch:sync": "node scripts/branch-setup.js --sync",
    "branch:setup": "node scripts/branch-setup.js",
    "branch:create": "node scripts/create-branch.js",
    "branch:rollback": "node scripts/create-rollback-branch.js",
    "branch:init": "node scripts/setup-branches.js",
    "branch:protection": "node scripts/configure-branch-protection.js",
    "branch:protection:gh": "node scripts/configure-branch-protection.js --generate-gh-cli",
    "branch:protection:tf": "node scripts/configure-branch-protection.js --generate-terraform",
    "branch:protection:apply": "node scripts/apply-branch-protection-from-json.js",
    "branch:protection:apply:dry": "node scripts/apply-branch-protection-from-json.js --dry-run",
    "branch:env:verify": "node scripts/verify-branch-env.js",
    "branch:env:verify:sync": "node scripts/verify-branch-env.js --sync",
    "branch:env:configure": "node scripts/configure-branch-env.js",
    "branch:env:configure:apply": "node scripts/configure-branch-env.js --apply-protection",
    "vercel:verify": "node scripts/verify-vercel-project.js",
    "github:test-token": "node scripts/test-github-token.js",
    "clerk:verify-config": "node scripts/verify-clerk-config.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "turbo": "^2.7.6"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "overrides": {
    "glob": "^9.3.5"
  }
}
