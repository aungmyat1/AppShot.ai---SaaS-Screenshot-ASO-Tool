# ========================================
# AppShot.ai - Test environment template
# ========================================
# Copy to .env.test and set values, or set in CI (GitHub Actions / Vercel).
# .env.test is gitignored. Use this file as reference for test-only vars.

NODE_ENV=test
APP_URL=http://localhost:3000

# Use a separate test DB and test keys
DATABASE_URL="postgresql://user:pass@localhost:5432/getappshots_test?schema=public"
DATABASE_URL_ASYNC="postgresql+asyncpg://user:pass@localhost:5432/getappshots_test"

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Minimal storage for tests (or mock)
STORAGE_BUCKET="test-bucket"
STORAGE_REGION="auto"

SCRAPE_QUEUE_MODE=sync
PLAY_SCRAPE_MODE=html
PLAY_SCRAPE_FALLBACK_PLAYWRIGHT=false

JWT_SECRET_KEY="test-jwt-secret-at-least-32-characters-long"
